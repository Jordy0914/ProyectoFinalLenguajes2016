@model IEnumerable<prgGestionDeCompañias.tbProyectos>

@{
    ViewBag.Title = "Listado de Proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado General de Proyectos:</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idProyecto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombreDocumento)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProyecto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreDocumento)
            </td>
            <td class="custom-footer-link2">
                @Html.ActionLink("Información", "Details", new { id = item.idProyecto })  <p></p>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idProyecto })  <p></p>
                @Html.ActionLink("Descargar", "DescargarArchivo", new { id = item.idProyecto })  
            </td>
        </tr>
    }

</table>
